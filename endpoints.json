{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "cats", "description": "Not dogs" }]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Responds with an article object for the given article_id. Includes total comment_count.",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg",
        "comment_count": 11
      }
    }
  },
  "GET /api/articles": {
    "description": "Responds with an array of all articles. Supports sorting, ordering and filtering by topic.",
    "queries": {
      "sort_by": "Column to sort by. Default: created_at. Valid columns: article_id, title, topic, author, created_at, votes, comment_count",
      "order": "Order of sorting. Default: desc. Options: asc, desc",
      "topic": "Filter articles by topic (e.g. ?topic=cats)."
    },
    "example": "/api/articles?sort_by=votes&order=asc&topic=mitch"
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments by article_id, sorted by created_at descending.",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 3,
          "body": "Ambidextrous marsupial",
          "votes": 0,
          "author": "icellusedkars",
          "created_at": "2020-09-19T23:10:00.000Z",
          "article_id": 3
        },
        {
          "comment_id": 3,
          "body": "git push origin master",
          "votes": 0,
          "author": "icellusedkars",
          "created_at": "2020-06-20T07:24:00.000Z",
          "article_id": 3
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "add new comment by specific article_id with username and body",
    "requestBody": {
      "username": "butter_bridge",
      "body": "Nice nice!"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "Nice article!",
        "votes": 0,
        "author": "butter_bridge",
        "article_id": 3,
        "created_at": "2020-07-10T20:11:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates an article's votes by a given amount",
    "requestBody": {
      "inc_votes": -5
    },
    "exampleResponse": {
      "articles": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 95,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by comment_id",
    "exampleResponse": {
      "status": 204
    }
  },
  "GET /api/users": {
    "description": "gets all users",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "Jonny",
          "avatar_url": "https://avatar.com/jonny.png"
        },
        {
          "username": "icellusedkars",
          "name": "sam",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24604688?s=460&v=4"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "Returns a user by username.",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "butter_bridge",
        "name": "jonny",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
    }
  },
  "POST /api/topics": {
    "slug": "topic name here",
    "description": "description here",
    "img_url": "optional url"
  }
}
